<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_fragment_sport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Title TextView for Latest News -->
    <TextView
        android:id="@+id/textViewLatestNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest News"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <!-- TextView for Not Available -->

    <!-- RecyclerView for sports content -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSports"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <!-- Add a ProgressBar for loading content (optional) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Add a button for refreshing the content (optional) -->

</LinearLayout>
